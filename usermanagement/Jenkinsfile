pipeline {
    agent any
    tools { 
        maven 'maven' 
        jdk 'jdk17' 
    }
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                ''' 
            }
        }

        stage ('Build') {
            steps {
                sh '''
                    cd usermanagement
                    mvn -B -DskipTests clean package -P frontend
                ''' 
            }
        }
        stage('Test') {
            steps {
                sh '''
                    cd usermanagement
                    mvn test
                ''' 
            }
            post {
                always {
                    junit  skipPublishingChecks: true, testResults: 'usermanagement/rest/target/surefire-reports/*.xml'
                }
            }
        }
    }
}